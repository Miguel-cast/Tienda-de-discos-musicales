@page
@model asp_presentacion.Pages.Ventanas.ReseñasClientesModel
@{
    ViewData["Titulo"] = "Gestión de ReseñasClientes";
}

<div class="container-fluid py-4">
    <form method="POST" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="d-flex justify-content-between align-items-center page-header">
            <h2 class="text-primary mb-0"><i class="fas fa-compact-disc me-2"></i>ReseñasClientes</h2>

            <div class="action-bar">
                <button type="submit" asp-page-handler="BtRefrescar"
                        class="btn btn-outline-primary btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-sync-alt"></i> Refrescar
                </button>

                <button type="submit" asp-page-handler="BtNuevo"
                        class="btn btn-success btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-plus"></i> Nuevo
                </button>

                <button type="submit" asp-page-handler="BtGuardar"
                        class="btn btn-primary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-save"></i> Guardar
                </button>

                <button type="submit" asp-page-handler="BtCancelar"
                        class="btn btn-secondary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-times"></i> Cancelar
                </button>
            </div>
        </div>

        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.ReseñaID" />
        }
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Comentario" />
            <input type="hidden" asp-for="@Model.Actual!.Calificacion" />
            <input type="hidden" asp-for="@Model.Actual!.Fecha" />
            <input type="hidden" asp-for="@Model.Actual!.ClienteID" />
            <input type="hidden" asp-for="@Model.Actual!.DiscoID" />
        }

        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-edit me-2"></i>Información del Disco</span>
                </div>
                <div class="card-body-custom">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Titulo</label>
                            <input class="form-control" asp-for="@Model.Actual!.Comentario" placeholder="Ej. tremendo disco..." />
                            <span asp-validation-for="@Model.Actual!.Comentario" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Calificacion</label>
                            <input class="form-control" asp-for="@Model.Actual!.Calificacion" placeholder="Ej. 5" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Fecha</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white text-muted">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>

                                <input type="date"
                                       class="form-control"
                                       asp-for="@Model.Actual!.Fecha" />
                            </div>
                            <span asp-validation-for="@Model.Actual!.Fecha" class="text-danger"></span>
                        </div>


                        <div class="col-md-6">
                            <label class="form-label fw-bold">Cliente</label>

                            <select class="form-control"
                                    asp-for="@Model.Actual!.ClienteID"
                                    asp-items="Model.ClientesSelectList">

                                <option value="">-- Seleccione un Cliente --</option>
                            </select>

                            <span asp-validation-for="@Model.Actual!.ClienteID" class="text-danger"></span>
                        </div>


                        <div class="col-md-6">
                            <label class="form-label fw-bold">Disco</label>

                            <select class="form-control"
                                    asp-for="@Model.Actual!.DiscoID"
                                    asp-items="Model.DiscosSelectList">

                                <option value="">-- Seleccione un Disco --</option>
                            </select>

                            <span asp-validation-for="@Model.Actual!.DiscoID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="modal-overlay">
                <div class="modal-content-custom text-center">
                    <div class="mb-3 text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h3>¿Eliminar Producto?</h3>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>

                    <div class="alert alert-warning">
                        <strong>@Model.Actual!.Comentario</strong>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" asp-page-handler="BtBorrar" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-2"></i>Confirmar Borrar
                        </button>
                        <button type="submit" asp-page-handler="BtCancelar" class="btn btn-light px-4 border">
                            Cancelar
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-list me-2"></i>Listado de ReseñasClientes</span>
                </div>
                <div class="card-body-custom">

                    <div class="table-responsive">
                        <table class="table table-custom align-middle">
                            <thead>
                                <tr>
                                    <th>Comentario</th>
                                    <th>Calificacion</th>
                                    <th>Fecha</th>
                                    <th>Disco</th>
                                    <th>Cliente</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Lista != null && Model.Lista.Any())
                                {
                                    @foreach (var elemento in Model.Lista)
                                    {
                                        <tr>
                                            <td class="fw-bold">@elemento.Comentario</td>
                                            <td class="text-muted">@elemento.Calificacion</td>
											<td class="fw-bold">@elemento.Fecha.ToString("d")</td>

                                            <td><span class="badge bg-secondary bg-opacity-25 text-dark">@elemento.Disco?.Titulo</span></td>
                                            <td><span class="badge bg-info bg-opacity-25 text-dark">@elemento.Cliente?.Nombre</span></td>
                                            <td class="text-end">
                                                <button type="submit" asp-page-handler="BtModificar" asp-route-data="@elemento.ReseñaID"
                                                        class="btn btn-sm btn-warning text-white" title="Editar">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="submit" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.ReseñaID"
                                                        class="btn btn-sm btn-danger" title="Borrar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                            No hay ReseñasClientes registrados
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </form>
</div>