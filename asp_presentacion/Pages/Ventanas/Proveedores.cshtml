@page
@model asp_presentacion.Pages.Ventanas.ProveedoresModel
@{
    ViewData["Titulo"] = "Gestión de Proveedores";
}

<div class="container-fluid py-4">
    <form method="POST" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="d-flex justify-content-between align-items-center page-header">
            <h2 class="text-primary mb-0"><i class="fas fa-truck"></i>Proveedores</h2>

            <div class="action-bar">
                <button type="submit" asp-page-handler="BtRefrescar"
                        class="btn btn-outline-primary btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-sync-alt"></i> Refrescar
                </button>

                <button type="submit" asp-page-handler="BtNuevo"
                        class="btn btn-success btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-plus"></i> Nuevo
                </button>

                <button type="submit" asp-page-handler="BtGuardar"
                        class="btn btn-primary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-save"></i> Guardar
                </button>

                <button type="submit" asp-page-handler="BtCancelar"
                        class="btn btn-secondary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-times"></i> Cancelar
                </button>
            </div>
        </div>

        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.ProveedoresId" />
        }
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.NombreEmpresa" />
            <input type="hidden" asp-for="@Model.Actual!.Contacto" />
            <input type="hidden" asp-for="@Model.Actual!.Telefono" />
            <input type="hidden" asp-for="@Model.Actual!.Direccion" />
        }

        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-edit me-2"></i>Información del Proveedor</span>
                </div>
                <div class="card-body-custom">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Nombre del proveedor</label>
                            <input class="form-control" asp-for="@Model.Actual!.NombreEmpresa" placeholder="Ej. Sonic music" />
                            <span asp-validation-for="@Model.Actual!.NombreEmpresa" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Contacto</label>
                            <input class="form-control" asp-for="@Model.Actual!.Contacto" placeholder="Ej. Carlos Mendoza" />
                            <span asp-validation-for="@Model.Actual!.Contacto" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Telefono</label>
                            <input class="form-control" asp-for="@Model.Actual!.Telefono" placeholder="Ej. +57 3214251672" />
                            <span asp-validation-for="@Model.Actual!.Telefono" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Direccion</label>
                            <input class="form-control" asp-for="@Model.Actual!.Direccion" placeholder="Ej. El Poblado, Medellín" />
                            <span asp-validation-for="@Model.Actual!.Direccion" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="modal-overlay">
                <div class="modal-content-custom text-center">
                    <div class="mb-3 text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h3>¿Eliminar Producto?</h3>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>

                    <div class="alert alert-warning">
                        <strong>@Model.Actual!.NombreEmpresa</strong>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" asp-page-handler="BtBorrar" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-2"></i>Confirmar Borrar
                        </button>
                        <button type="submit" asp-page-handler="BtCancelar" class="btn btn-light px-4 border">
                            Cancelar
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-list me-2"></i>Listado de Proveedores</span>
                </div>
                <div class="card-body-custom">

                    <div class="row g-2 mb-4 p-3 bg-light rounded">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-filter"></i></span>
                                <input class="form-control" asp-for="@Model.Filtro!.NombreEmpresa" placeholder="Filtrar por Nombre del proveedor..." />
                            </div>
                        </div>

                        <div class="col-md-2">
                            <button type="submit" asp-page-handler="BtRefrescar" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-custom align-middle">
                            <thead>
                                <tr>
                                    <th>Proveedor</th>
                                    <th>Contacto</th>
                                    <th>Telefono</th>
                                    <th>Direccion</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Lista != null && Model.Lista.Any())
                                {
                                    @foreach (var elemento in Model.Lista)
                                    {
                                        <tr>
                                            <td class="fw-bold">@elemento.NombreEmpresa</td>
                                            <td class="text-muted">@elemento.Contacto</td>
                                            <td class="text-muted">@elemento.Telefono</td>
                                            <td class="text-muted">@elemento.Direccion</td>
                                            <td class="text-end">
                                                <button type="submit" asp-page-handler="BtModificar" asp-route-data="@elemento.ProveedoresId"
                                                        class="btn btn-sm btn-warning text-white" title="Editar">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="submit" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.ProveedoresId"
                                                        class="btn btn-sm btn-danger" title="Borrar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                            No hay Proveedores registrados
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </form>
</div>