@page
@model asp_presentacion.Pages.Ventanas.EmpleadosModel
@{
    ViewData["Titulo"] = "Gestión de Empleados";
}

<div class="container-fluid py-4">
    <form method="POST" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="d-flex justify-content-between align-items-center page-header">
            <h2 class="text-primary mb-0"><i class="fas fa-user-tie"></i>Empleados</h2>

            <div class="action-bar">
                <button type="submit" asp-page-handler="BtRefrescar"
                        class="btn btn-outline-primary btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-sync-alt"></i> Refrescar
                </button>

                <button type="submit" asp-page-handler="BtNuevo"
                        class="btn btn-success btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-plus"></i> Nuevo
                </button>

                <button type="submit" asp-page-handler="BtGuardar"
                        class="btn btn-primary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-save"></i> Guardar
                </button>

                <button type="submit" asp-page-handler="BtCancelar"
                        class="btn btn-secondary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-times"></i> Cancelar
                </button>
            </div>
        </div>

        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.EmpleadoId" />
        }
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Nombre" />
            <input type="hidden" asp-for="@Model.Actual!.Apellido" />
            <input type="hidden" asp-for="@Model.Actual!.Cargo" />
            <input type="hidden" asp-for="@Model.Actual!.Email" />
            <input type="hidden" asp-for="@Model.Actual!.Telefono" />
        }

        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-edit me-2"></i>Información del Disco</span>
                </div>
                <div class="card-body-custom">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Nombre</label>
                            <input class="form-control" asp-for="@Model.Actual!.Nombre" placeholder="Ej. Alfonso" />
                            <span asp-validation-for="@Model.Actual!.Nombre" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Apellido</label>
                            <input class="form-control" asp-for="@Model.Actual!.Apellido" placeholder="Ej. Perez" />
                            <span asp-validation-for="@Model.Actual!.Apellido" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Cargo</label>
                            <input class="form-control" asp-for="@Model.Actual!.Cargo" placeholder="Ej. Cajero" />
                            <span asp-validation-for="@Model.Actual!.Cargo" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <input class="form-control" asp-for="@Model.Actual!.Email" placeholder="Ej. alfonsoper@gmail.com" />
                            <span asp-validation-for="@Model.Actual!.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Telefono</label>
                            <input class="form-control" asp-for="@Model.Actual!.Telefono" placeholder="Ej. +57 31234343535" />
                            <span asp-validation-for="@Model.Actual!.Telefono" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="modal-overlay">
                <div class="modal-content-custom text-center">
                    <div class="mb-3 text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h3>¿Eliminar Producto?</h3>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>

                    <div class="alert alert-warning">
                        <strong>@Model.Actual!.Nombre</strong>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" asp-page-handler="BtBorrar" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-2"></i>Confirmar Borrar
                        </button>
                        <button type="submit" asp-page-handler="BtCancelar" class="btn btn-light px-4 border">
                            Cancelar
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-list me-2"></i>Listado de Empleados</span>
                </div>
                <div class="card-body-custom">

                    <div class="row g-2 mb-4 p-3 bg-light rounded">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-filter"></i></span>
                                <input class="form-control" asp-for="@Model.Filtro!.Cargo" placeholder="Filtrar por Cargo..." />
                            </div>
                        </div>

                        <div class="col-md-2">
                            <button type="submit" asp-page-handler="BtRefrescar" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-custom align-middle">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Cargo</th>
                                    <th>Email</th>
                                    <th>Telefono</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Lista != null && Model.Lista.Any())
                                {
                                    @foreach (var elemento in Model.Lista)
                                    {
                                        <tr>
                                            <td class="fw-bold">@elemento.Nombre</td>
                                            <td class="text-muted">@elemento.Apellido</td>
                                            <td class="text-muted">@elemento.Cargo</td>
                                            <td class="text-muted">@elemento.Email</td>
                                            <td class="text-muted">@elemento.Telefono</td>
                                            <td class="text-end">
                                                <button type="submit" asp-page-handler="BtModificar" asp-route-data="@elemento.EmpleadoId"
                                                        class="btn btn-sm btn-warning text-white" title="Editar">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="submit" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.EmpleadoId"
                                                        class="btn btn-sm btn-danger" title="Borrar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                            No hay Empleados registrados
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </form>
</div>