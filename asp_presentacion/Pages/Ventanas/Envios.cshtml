@page
@model asp_presentacion.Pages.Ventanas.EnviosModel
@{
    ViewData["Titulo"] = "Gestión de Envios";
}

<div class="container-fluid py-4">
    <form method="POST" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="d-flex justify-content-between align-items-center page-header">
            <h2 class="text-primary mb-0"><i class="fas fa-truck-fast"></i>Envios</h2>

            <div class="action-bar">
                <button type="submit" asp-page-handler="BtRefrescar"
                        class="btn btn-outline-primary btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-sync-alt"></i> Refrescar
                </button>

                <button type="submit" asp-page-handler="BtNuevo"
                        class="btn btn-success btn-icon"
                        disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-plus"></i> Nuevo
                </button>

                <button type="submit" asp-page-handler="BtGuardar"
                        class="btn btn-primary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-save"></i> Guardar
                </button>

                <button type="submit" asp-page-handler="BtCancelar"
                        class="btn btn-secondary btn-icon"
                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                    <i class="fas fa-times"></i> Cancelar
                </button>
            </div>
        </div>

        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.EnvioID" />
        }
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.DireccionEntrega" />
            <input type="hidden" asp-for="@Model.Actual!.CiudadEntrega" />
            <input type="hidden" asp-for="@Model.Actual!.PaisEntrega" />
            <input type="hidden" asp-for="@Model.Actual!.FechaEnvio" />
            <input type="hidden" asp-for="@Model.Actual!.PedidoID" />
        }

        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-edit me-2"></i>Información del Envio</span>
                </div>
                <div class="card-body-custom">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Direccion</label>
                            <input class="form-control" asp-for="@Model.Actual!.DireccionEntrega" placeholder="Ej. Cra 45 #23-11" />
                            <span asp-validation-for="@Model.Actual!.DireccionEntrega" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ciudad</label>
                            <input class="form-control" asp-for="@Model.Actual!.CiudadEntrega" placeholder="Ej. Cali" />
                            <span asp-validation-for="@Model.Actual!.CiudadEntrega" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Pais</label>
                            <input class="form-control" asp-for="@Model.Actual!.PaisEntrega" placeholder="Ej. Colombia" />
                            <span asp-validation-for="@Model.Actual!.PaisEntrega" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Fecha de Envio</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white text-muted">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>

                                <input type="date"
                                       class="form-control"
                                       asp-for="@Model.Actual!.FechaEnvio" />
                            </div>
                            <span asp-validation-for="@Model.Actual!.FechaEnvio" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="modal-overlay">
                <div class="modal-content-custom text-center">
                    <div class="mb-3 text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <h3>¿Eliminar Producto?</h3>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>

                    <div class="alert alert-warning">
                        <strong>@Model.Actual!.DireccionEntrega</strong>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" asp-page-handler="BtBorrar" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-2"></i>Confirmar Borrar
                        </button>
                        <button type="submit" asp-page-handler="BtCancelar" class="btn btn-light px-4 border">
                            Cancelar
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="card card-custom">
                <div class="card-header-custom">
                    <span><i class="fas fa-list me-2"></i>Listado de Envios</span>
                </div>
                <div class="card-body-custom">

                    <div class="table-responsive">
                        <table class="table table-custom align-middle">
                            <thead>
                                <tr>
                                    <th>Direccion</th>
                                    <th>Ciudad</th>
                                    <th>Pais</th>
                                    <th>Fecha</th>
                                    <th>Pedido</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Lista != null && Model.Lista.Any())
                                {
                                    @foreach (var elemento in Model.Lista)
                                    {
                                        <tr>
                                            <td class="fw-bold">@elemento.DireccionEntrega</td>
                                            <td class="text-muted">@elemento.CiudadEntrega</td>
                                            <td class="text-muted">@elemento.PaisEntrega</td>
                                            <td class="fw-bold">@elemento.FechaEnvio.ToString("d")</td>

											<td><span class="badge bg-secondary bg-opacity-25 text-dark">@elemento.Pedido?.Estado</span></td>
                                            <td class="text-end">
                                                <button type="submit" asp-page-handler="BtModificar" asp-route-data="@elemento.EnvioID"
                                                        class="btn btn-sm btn-warning text-white" title="Editar">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="submit" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.EnvioID"
                                                        class="btn btn-sm btn-danger" title="Borrar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                            No hay Envios registrados
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </form>
</div>